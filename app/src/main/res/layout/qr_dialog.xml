<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/dialog_qrcode"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:contentDescription="QR code for device registration"
        tools:srcCompat="@drawable/qrcode_original" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Scan to Register Device"
        android:textAlignment="center"
        android:textColor="@color/google_btn_text"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>